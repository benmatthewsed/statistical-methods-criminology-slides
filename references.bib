@article{fosseAnatomyCohortAnalysis2023,
  title = {The {{Anatomy}} of {{Cohort Analysis}}: {{Decomposing Comparative Cohort Careers}}},
  shorttitle = {The {{Anatomy}} of {{Cohort Analysis}}},
  author = {Fosse, Ethan and Winship, Christopher},
  year = {2023},
  month = aug,
  journal = {Sociological Methodology},
