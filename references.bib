@article{mintonVisualisingQuantifyingExcess2017,
  title = {Visualising and Quantifying `Excess Deaths' in {{Scotland}} Compared with the Rest of the {{UK}} and the Rest of {{Western Europe}}},
  author = {Minton, Jon and Shaw, Richard and Green, Mark A and Vanderbloemen, Laura and Popham, Frank and McCartney, Gerry},
